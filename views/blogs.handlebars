<div class="container-fluid">
    <div class="row mt-0 pt-0">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="images/bloglogo.jpg" class="d-block w-100" style="height:20rem" alt="...">
            </div>
        </div>
    </div>
</div>
<div class="container mt-5 mb-5 p-3">
    <div class="row ">

        {{#each blog}}

        <div class="col col-4 mb-3" style="cursor:pointer;">
            <a href="/blog/{{_id}}" class="text-dark" style="text-decoration: none;">
                <div class="card">
                    <img src="/uploads/{{image}}" class="card-img-top" alt="..">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text">{{description}}</p>
                    </div>
                </div>
            </a>
        </div>

        {{/each}}

    </div>
</div>